@page "{id:int}"
@model Portal_Refeicoes.Pages.Colaboradores.EditModel
@{
    ViewData["Title"] = "Editar Colaborador";
}

<div class="container mt-4" style="max-width: 800px;">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0"><i class="bi bi-pencil-square"></i> Editar Colaborador</h4>
        </div>
        <div class="card-body">
            <form method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="Colaborador.Id" />

                <div class="row g-3">
                    <div class="col-12 mb-3">
                        <label asp-for="ImagemFile" class="form-label fw-bold">Atualizar Foto</label>
                        <input asp-for="ImagemFile" type="file" class="form-control" accept="image/*" />
                        <div class="form-text">A foto será enviada para reconhecimento facial e atualizada no cadastro.</div>
                    </div>

                    <div class="col-md-12">
                        <label asp-for="Colaborador.Nome" class="form-label fw-bold">Nome Completo</label>
                        <input asp-for="Colaborador.Nome" class="form-control" />
                        <span asp-validation-for="Colaborador.Nome" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Colaborador.CartaoPonto" class="form-label fw-bold">Cartão Ponto</label>
                        <input asp-for="Colaborador.CartaoPonto" class="form-control" />
                        <span asp-validation-for="Colaborador.CartaoPonto" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 d-flex align-items-end">
                        <div class="form-check form-switch mb-2">
                            <input class="form-check-input" type="checkbox" asp-for="Colaborador.Ativo" />
                            <label class="form-check-label fw-bold" asp-for="Colaborador.Ativo">Cadastro Ativo</label>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Colaborador.DepartamentoId" class="form-label fw-bold">Departamento</label>
                        <select asp-for="Colaborador.DepartamentoId" asp-items="Model.Departamentos" class="form-select">
                            <option value="">Selecione...</option>
                        </select>
                        <span asp-validation-for="Colaborador.DepartamentoId" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Colaborador.FuncaoId" class="form-label fw-bold">Função</label>
                        <select asp-for="Colaborador.FuncaoId" asp-items="Model.Funcoes" class="form-select">
                            <option value="">Selecione...</option>
                        </select>
                        <span asp-validation-for="Colaborador.FuncaoId" class="text-danger"></span>
                    </div>
                </div>

                <div class="mt-4 pt-3 border-top d-flex justify-content-end gap-2">
                    <a asp-page="./Index" class="btn btn-outline-secondary">Cancelar</a>
                    <button type="submit" class="btn btn-primary px-4">Salvar Alterações</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}