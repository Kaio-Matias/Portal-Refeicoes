@page
@model Portal_Refeicoes.Pages.Colaboradores.CreateModel
@{
    ViewData["Title"] = "Novo Colaborador";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 page-header">
    <h1 class="h2">@ViewData["Title"]</h1>
</div>

<div class="card card-form">
    <div class="card-body">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Colaborador.Nome" class="form-label"></label>
                        <input asp-for="Colaborador.Nome" class="form-control" />
                        <span asp-validation-for="Colaborador.Nome" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Colaborador.CartaoPonto" class="form-label"></label>
                        <input asp-for="Colaborador.CartaoPonto" class="form-control" />
                        <span asp-validation-for="Colaborador.CartaoPonto" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Colaborador.FuncaoId" class="form-label"></label>
                        <select asp-for="Colaborador.FuncaoId" class="form-select" asp-items="Model.Funcoes">
                            <option value="">Selecione a Função</option>
                        </select>
                        <span asp-validation-for="Colaborador.FuncaoId" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Colaborador.DepartamentoId" class="form-label"></label>
                        <select asp-for="Colaborador.DepartamentoId" class="form-select" asp-items="Model.Departamentos">
                            <option value="">Selecione o Departamento</option>
                        </select>
                        <span asp-validation-for="Colaborador.DepartamentoId" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="mb-4">
                <label asp-for="Imagem" class="form-label">Foto do Colaborador</label>
                <input asp-for="Imagem" class="form-control" type="file" />
                <span asp-validation-for="Imagem" class="text-danger"></span>
            </div>

            <div class="mt-4">
                <button type="submit" class="btn btn-primary">Salvar Colaborador</button>
                <a asp-page="./Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}