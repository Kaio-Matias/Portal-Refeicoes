@page "{id:int}"
@model Portal_Refeicoes.Pages.Funcoes.EditModel
@{
    ViewData["Title"] = "Editar Função";
}

<div class="container mt-4" style="max-width: 600px;">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0"><i class="bi bi-pencil-square"></i> Editar Função</h4>
        </div>
        <div class="card-body">
            <form method="post">
                <input type="hidden" asp-for="Funcao.Id" />
                <div class="mb-3">
                    <label asp-for="Funcao.Nome" class="form-label fw-bold">Nome da Função</label>
                    <input asp-for="Funcao.Nome" class="form-control" />
                    <span asp-validation-for="Funcao.Nome" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-end gap-2 mt-4">
                    <a asp-page="Index" class="btn btn-outline-secondary">Cancelar</a>
                    <button type="submit" class="btn btn-primary px-4">Salvar Alterações</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}