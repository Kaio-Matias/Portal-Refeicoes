@page
@model Portal_Refeicoes.Pages.IndexModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Dashboard</h1>
</div>

<div class="row">
    <div class="col-xl-4 col-md-6 mb-4">
        <div class="dashboard-card">
            <div class="card-body">
                <div class="card-icon icon-colaboradores">
                    <i class="bi bi-people-fill"></i>
                </div>
                <div class="card-content">
                    <div class="card-title text-uppercase">Colaboradores Ativos</div>
                    <div class="card-text">@Model.Stats.TotalColaboradoresAtivos</div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-4 col-md-6 mb-4">
        <div class="dashboard-card">
            <div class="card-body">
                <div class="card-icon icon-refeicoes">
                    <i class="bi bi-egg-fried"></i>
                </div>
                <div class="card-content">
                    <div class="card-title text-uppercase">Refeições Servidas Hoje</div>
                    <div class="card-text">@Model.Stats.RefeicoesHoje</div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-4 col-md-6 mb-4">
        <div class="dashboard-card position-relative @(Model.Stats.AlertasPendentes > 0 ? "border-warning shadow-sm" : "")">
            <div class="card-body">
                <div class="card-icon icon-alertas @(Model.Stats.AlertasPendentes > 0 ? "text-warning" : "")">
                    <i class="bi bi-exclamation-triangle-fill"></i>
                </div>
                <div class="card-content">
                    <div class="card-title text-uppercase text-dark">Alertas Pendentes</div>
                    <div class="card-text @(Model.Stats.AlertasPendentes > 0 ? "text-danger fw-bold" : "text-dark")">
                        @Model.Stats.AlertasPendentes
                    </div>
                    <a asp-page="/Justificativa/Index" class="stretched-link text-decoration-none"></a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-xl-8 col-lg-7 mb-4">
        <div class="card shadow h-100">
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between header-laranja">
                <h6 class="m-0 font-weight-bold">Refeições da Semana</h6>
            </div>
            <div class="card-body">
                <div class="chart-area text-center">
                    <p class="text-muted mt-5">(Área reservada para Gráfico)</p>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-4 col-lg-5 mb-4">
        <div class="card shadow h-100">
            <div class="card-header py-3 header-laranja d-flex justify-content-between align-items-center">
                <h6 class="m-0 font-weight-bold">Registos de Hoje</h6>
                <span class="badge bg-light text-dark">@DateTime.Now.ToString("dd/MM")</span>
            </div>
            <div class="card-body p-0">
                <ul class="list-group list-group-flush">
                    @if (Model.RegistrosRecentes != null && Model.RegistrosRecentes.Any())
                    {
                        @foreach (var registro in Model.RegistrosRecentes)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                    <div class="fw-bold text-dark">@registro.ColaboradorNome</div>
                                    <div class="small text-muted">
                                        <i class="bi bi-building me-1"></i>@registro.DepartamentoNome
                                    </div>
                                </div>
                                <div class="text-end">
                                    <span class="badge bg-primary rounded-pill">@registro.DataHoraRegistro.ToString("HH:mm")</span>
                                </div>
                            </li>
                        }
                    }
                    else
                    {
                        <li class="list-group-item text-center py-5 text-muted">
                            <i class="bi bi-clock-history display-4 d-block mb-3 opacity-25"></i>
                            <p class="mb-0">Nenhum registo encontrado hoje.</p>
                            <small>Novos registos aparecerão aqui.</small>
                        </li>
                    }
                </ul>
            </div>
            <div class="card-footer text-center bg-white">
                <a asp-page="/Refeicoes/Index" class="btn btn-sm btn-outline-primary w-100">
                    Ver Histórico Completo <i class="bi bi-arrow-right ms-1"></i>
                </a>
            </div>
        </div>
    </div>
</div>