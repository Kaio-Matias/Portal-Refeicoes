@page
@model Portal_Refeicoes.Pages.Justificativas.IndexModel
@{
    ViewData["Title"] = "Pendências de Justificativa";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Justificativas de Refeições</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-page="/Index">Dashboard</a></li>
        <li class="breadcrumb-item active">Justificativas</li>
    </ol>

    <!-- Alertas de Sucesso/Erro -->
    @if (Model.MensagemSucesso != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @Model.MensagemSucesso
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (Model.MensagemErro != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @Model.MensagemErro
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card mb-4">
        <div class="card-header bg-warning text-dark">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            <strong>Refeições Excedentes Pendentes</strong>
        </div>
        <div class="card-body">
            @if (Model.Pendencias == null || !Model.Pendencias.Any())
            {
                <div class="text-center py-5">
                    <i class="bi bi-check-circle-fill text-success" style="font-size: 3rem;"></i>
                    <h4 class="mt-3 text-success">Tudo Certo!</h4>
                    <p class="text-muted">Não há refeições excedentes aguardando justificativa no momento.</p>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover align-middle">
                        <thead>
                            <tr>
                                <th>Data/Hora</th>
                                <th>Colaborador</th>
                                <th>Departamento</th>
                                <th>Refeição</th>
                                <th class="text-center">Ação</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Pendencias)
                            {
                                <tr>
                                    <td>@item.DataHora.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td>@item.NomeColaborador</td>
                                    <td>@item.Departamento</td>
                                    <td>
                                        <span class="badge bg-danger rounded-pill">@item.TipoRefeicao (Extra)</span>
                                    </td>
                                    <td class="text-center">
                                        <!-- Botão que abre o Modal -->
                                        <button type="button"
                                                class="btn btn-primary btn-sm"
                                                data-bs-toggle="modal"
                                                data-bs-target="#modalJustificar"
                                                onclick="prepararModal('@item.RegistroRefeicaoId', '@item.NomeColaborador', '@item.TipoRefeicao')">
                                            <i class="bi bi-pencil-square"></i> Justificar
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

<!-- Modal de Justificativa -->
<div class="modal fade" id="modalJustificar" tabindex="-1" aria-labelledby="modalTitle" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title" id="modalTitle">Registrar Justificativa</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <!-- Campo Oculto para o ID da Refeição -->
                    <input type="hidden" asp-for="Input.RegistroRefeicaoId" id="modalId" />

                    <div class="alert alert-light border mb-3">
                        <p class="mb-1"><strong>Colaborador:</strong> <span id="modalNome"></span></p>
                        <p class="mb-0"><strong>Refeição:</strong> <span id="modalRefeicao"></span></p>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.Motivo" class="form-label fw-bold">Motivo da Liberação</label>
                        <textarea asp-for="Input.Motivo" class="form-control" rows="4" placeholder="Ex: Autorizado hora extra para manutenção..." required></textarea>
                        <span asp-validation-for="Input.Motivo" class="text-danger"></span>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-save"></i> Salvar Justificativa
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Função simples para passar os dados da linha para o modal
        function prepararModal(id, nome, refeicao) {
            document.getElementById('modalId').value = id;
            document.getElementById('modalNome').innerText = nome;
            document.getElementById('modalRefeicao').innerText = refeicao;
        }
    </script>
}