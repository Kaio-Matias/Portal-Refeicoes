@page
@model Portal_Refeicoes.Pages.Justificativas.IndexModel
@{
    ViewData["Title"] = "Pendências de Justificativa";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>@ViewData["Title"]</h2>
    </div>

    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["MensagemSucesso"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["MensagemErro"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (Model.Pendencias == null || !Model.Pendencias.Any())
    {
        <div class="alert alert-info text-center">
            <h4>Tudo certo!</h4>
            <p>Não há refeições excedentes pendentes de justificativa no momento.</p>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover table-bordered shadow-sm">
                <thead class="table-light">
                    <tr>
                        <th>Colaborador</th>
                        <th>Departamento</th>
                        <th>Data/Hora</th>
                        <th>Refeição</th>
                        <th class="text-center">Ação</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Pendencias)
                    {
                        <tr>
                            <td class="align-middle fw-bold">@item.NomeColaborador</td>
                            <td class="align-middle">@item.Departamento</td>
                            <td class="align-middle">@item.DataHora.ToString("dd/MM/yyyy HH:mm")</td>
                            <td class="align-middle">@item.TipoRefeicao</td>
                            <td class="text-center">
                                <button type="button"
                                        class="btn btn-warning btn-sm"
                                        data-bs-toggle="modal"
                                        data-bs-target="#modalJustificativa"
                                        data-id="@item.RegistroRefeicaoId"
                                        data-nome="@item.NomeColaborador">
                                    <i class="bi bi-pencil-square"></i> Justificar
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

<div class="modal fade" id="modalJustificativa" tabindex="-1" aria-labelledby="modalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post">
                <div class="modal-header bg-warning text-dark">
                    <h5 class="modal-title" id="modalLabel">Registrar Justificativa</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" asp-for="Input.RegistroRefeicaoId" id="hiddenId" />

                    <div class="mb-3">
                        <label class="form-label fw-bold">Colaborador:</label>
                        <p id="lblColaborador" class="form-control-plaintext">Selecione...</p>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.Motivo" class="form-label fw-bold">Motivo da Ocorrência</label>
                        <textarea asp-for="Input.Motivo" class="form-control" rows="4" placeholder="Descreva o motivo da refeição extra..." required minlength="5"></textarea>
                        <span asp-validation-for="Input.Motivo" class="text-danger"></span>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-primary">Salvar</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        // Script para passar os dados do botão clicado para dentro do Modal
        var modalJustificativa = document.getElementById('modalJustificativa')
        modalJustificativa.addEventListener('show.bs.modal', function (event) {
            // Botão que acionou o modal
            var button = event.relatedTarget

            // Extrai informações dos atributos data-*
            var id = button.getAttribute('data-id')
            var nome = button.getAttribute('data-nome')

            // Seleciona os elementos dentro do modal
            var modalInputId = modalJustificativa.querySelector('#hiddenId')
            var modalLblNome = modalJustificativa.querySelector('#lblColaborador')

            // Atualiza os valores
            modalInputId.value = id
            modalLblNome.textContent = nome
        })
    </script>
}