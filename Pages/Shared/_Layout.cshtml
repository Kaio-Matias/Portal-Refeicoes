@using System.Security.Claims
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Portal de Refeições</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    @* Adiciona link para o CSS específico do layout *@
    <link rel="stylesheet" href="~/css/layout.css" asp-append-version="true" />
</head>
<body class="d-flex">
    @* --- Sidebar Modificada --- *@
    <div class="sidebar d-flex flex-column p-3 bg-dark text-white" id="sidebar">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <a asp-page="/Index" class="d-flex align-items-center text-white text-decoration-none">
                <img src="~/img/logo.png" alt="Logo" class="sidebar-logo me-2" />
                <span class="fs-4 sidebar-brand-text">Refeitório</span>
            </a>
            @* Botão de fechar (visível apenas em telas menores) *@
            <button class="btn btn-dark d-md-none" id="sidebarToggleClose" title="Fechar Menu">
                <i class="fas fa-times"></i>
            </button>
        </div>
        <hr>
        <ul class="nav nav-pills flex-column mb-auto">
            <li class="nav-item">
                <a asp-page="/Index" class="nav-link text-white @(ViewData["Title"]?.ToString() == "Dashboard" ? "active" : "")" title="Dashboard">
                    <i class="fas fa-tachometer-alt me-2 sidebar-icon"></i>
                    <span class="sidebar-text">Dashboard</span>
                </a>
            </li>
            <li>
                <a asp-page="/Colaboradores/Index" class="nav-link text-white @(ViewData["Title"]?.ToString().Contains("Colaborador") ?? false ? "active" : "")" title="Colaboradores">
                    <i class="fas fa-users me-2 sidebar-icon"></i>
                    <span class="sidebar-text">Colaboradores</span>
                </a>
            </li>
            <li>
                <a asp-page="/Refeicoes/Index" class="nav-link text-white @(ViewData["Title"]?.ToString().Contains("Refeições") ?? false ? "active" : "")" title="Refeições">
                    <i class="fas fa-utensils me-2 sidebar-icon"></i>
                    <span class="sidebar-text">Refeições</span>
                </a>
            </li>
            <li>
                <a asp-page="/Departamentos/Index" class="nav-link text-white @(ViewData["Title"]?.ToString().Contains("Departamentos") ?? false ? "active" : "")" title="Departamentos">
                    <i class="fas fa-building me-2 sidebar-icon"></i>
                    <span class="sidebar-text">Departamentos</span>
                </a>
            </li>
            <li>
                <a asp-page="/Funcoes/Index" class="nav-link text-white @(ViewData["Title"]?.ToString().Contains("Funções") ?? false ? "active" : "")" title="Funções">
                    <i class="fas fa-id-card-alt me-2 sidebar-icon"></i>
                    <span class="sidebar-text">Funções</span>
                </a>
            </li>
            <li>
                <a asp-page="/ParadaDeFabrica/Index" class="nav-link text-white @(ViewData["Title"]?.ToString().Contains("Parada") ?? false ? "active" : "")" title="Parada de Fábrica">
                    <i class="fas fa-industry me-2 sidebar-icon"></i>
                    <span class="sidebar-text">Parada de Fábrica</span>
                </a>
            </li>

            @if (User.IsInRole("SuperAdmin"))
            {
                <hr />
                <li>
                    <a asp-page="/Usuarios/Index" class="nav-link text-white @(ViewData["Title"]?.ToString().Contains("Usuários") ?? false ? "active" : "")" title="Usuários">
                        <i class="fas fa-user-shield me-2 sidebar-icon"></i>
                        <span class="sidebar-text">Usuários</span>
                    </a>
                </li>
            }
        </ul>
        <hr>
        <div class="dropdown">
            <a href="#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
                <i class="fas fa-user-circle fs-3 me-2 sidebar-icon"></i>
                <strong class="sidebar-text">@User.Identity?.Name</strong>
            </a>
            <ul class="dropdown-menu dropdown-menu-dark text-small shadow" aria-labelledby="dropdownUser1">
                <li><a class="dropdown-item" href="#">Configurações</a></li>
                <li><a class="dropdown-item" href="#">Perfil</a></li>
                <li><hr class="dropdown-divider"></li>
                <li><a class="dropdown-item" asp-page="/Logout">Sair</a></li>
            </ul>
        </div>
        @* Botão de toggle para Desktop (adicionado no rodapé da sidebar) *@
        <div class="sidebar-toggle-desktop-wrapper mt-3 text-center d-none d-md-block">
            <button class="btn btn-outline-light" id="sidebarToggleDesktop" title="Recolher/Expandir Menu">
                <i class="fas fa-chevron-left"></i>
            </button>
        </div>
    </div>

    @* --- Conteúdo Principal Modificado --- *@
    <div class="main-content flex-grow-1 p-4" id="main-content">
        @* Botão de abrir (visível apenas em telas menores) *@
        <button class="btn btn-dark mb-3 d-md-none" id="sidebarToggleOpen" title="Abrir Menu">
            <i class="fas fa-bars"></i>
        </button>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @* Adiciona script específico do layout *@
    <script src="~/js/layout.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>