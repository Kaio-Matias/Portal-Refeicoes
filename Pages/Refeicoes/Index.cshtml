@page
@model Portal_Refeicoes.Pages.Refeicoes.IndexModel
@{
    ViewData["Title"] = "Histórico de Refeições";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="text-primary"><i class="bi bi-clock-history"></i> @ViewData["Title"]</h2>
</div>

<div class="card mb-4 shadow-sm border-0">
    <div class="card-header bg-light">
        <i class="bi bi-funnel-fill me-1"></i> Filtros de Pesquisa
    </div>
    <div class="card-body">
        <form method="get" class="row g-3 align-items-end">
            <div class="col-md-4">
                <label class="form-label fw-bold">Data</label>
                <div class="input-group">
                    <span class="input-group-text bg-white"><i class="bi bi-calendar-date"></i></span>
                    <input type="date" class="form-control" asp-for="DataFiltro">
                </div>
            </div>

            <div class="col-md-4">
                <label class="form-label fw-bold">Tipo de Refeição</label>
                <div class="input-group">
                    <span class="input-group-text bg-white"><i class="bi bi-cup-hot"></i></span>
                    <select asp-for="TipoRefeicaoFiltro" asp-items="Model.TiposRefeicaoSL" class="form-select">
                        <option value="">-- Todas --</option>
                    </select>
                </div>
            </div>

            <div class="col-md-4 d-flex gap-2">
                <button type="submit" class="btn btn-primary w-100">
                    <i class="bi bi-search"></i> Filtrar
                </button>
                <a asp-page="./Index" class="btn btn-outline-secondary" title="Limpar Filtros">
                    <i class="bi bi-x-lg"></i>
                </a>
            </div>
        </form>
    </div>
</div>

<div class="card shadow-sm border-0">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th class="ps-4">Data/Hora</th>
                        <th>Colaborador</th>
                        <th>Refeição</th>
                        <th>Depto / Função</th>
                        <th class="text-center pe-4">Registro Visual</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Refeicoes != null && Model.Refeicoes.Any())
                    {
                        @foreach (var item in Model.Refeicoes)
                        {
                            <tr>
                                <td class="ps-4 text-nowrap">
                                    <i class="bi bi-calendar3 me-2 text-muted"></i>
                                    @item.DataHoraRegistro.ToString("dd/MM/yyyy HH:mm")
                                </td>
                                <td class="fw-bold text-primary">
                                    @item.Colaborador.Nome
                                </td>
                                <td>
                                    @{
                                        string badgeClass = item.TipoRefeicao switch
                                        {
                                            "Almoço" => "bg-success",
                                            "Jantar" => "bg-primary",
                                            "Café da Manhã" => "bg-warning text-dark",
                                            "Ceia" => "bg-dark",
                                            _ => "bg-secondary"
                                        };
                                    }
                                    <span class="badge rounded-pill @badgeClass">@item.TipoRefeicao</span>
                                </td>
                                <td>
                                    <div class="small fw-bold text-secondary">@item.Colaborador.DepartamentoNome</div>
                                    <div class="small text-muted">@item.Colaborador.FuncaoNome</div>
                                </td>
                                <td class="text-center pe-4">
                                    @if (item.FotoRegistro != null && item.FotoRegistro.Length > 0)
                                    {
                                        <button type="button" class="btn btn-sm btn-outline-dark rounded-pill px-3"
                                                data-bs-toggle="modal"
                                                data-bs-target="#modalFoto"
                                                onclick="mostrarFoto('@Convert.ToBase64String(item.FotoRegistro)', '@item.Colaborador.Nome', '@item.DataHoraRegistro.ToString("dd/MM/yyyy HH:mm")')">
                                            <i class="bi bi-camera-fill me-1"></i> Ver Foto
                                        </button>
                                    }
                                    else
                                    {
                                        <span class="text-muted small fst-italic">Sem foto</span>
                                    }
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center py-5 text-muted">
                                <i class="bi bi-inbox display-4 d-block mb-3 opacity-25"></i>
                                <h5>Nenhum registro encontrado.</h5>
                                <p>Tente ajustar os filtros de data ou tipo.</p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="modal fade" id="modalFoto" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-light">
                <div>
                    <h5 class="modal-title fw-bold" id="modalNomeColaborador"></h5>
                    <small class="text-muted" id="modalDataHora"></small>
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center p-0 bg-dark">
                <img id="imgRegistro" src="" class="img-fluid" alt="Foto do Registro" style="max-height: 80vh;" />
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function mostrarFoto(base64, nome, dataHora) {
            document.getElementById('imgRegistro').src = "data:image/jpeg;base64," + base64;
            document.getElementById('modalNomeColaborador').innerText = nome;
            document.getElementById('modalDataHora').innerText = "Registrado em: " + dataHora;
        }
    </script>
}