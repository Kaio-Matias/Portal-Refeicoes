@page
@model Portal_Refeicoes.Pages.Departamentos.IndexModel
@{
    ViewData["Title"] = "Departamentos";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="text-primary"><i class="bi bi-building"></i> Gestão de Departamentos</h2>
    <a asp-page="Create" class="btn btn-success shadow-sm">
        <i class="bi bi-plus-lg me-1"></i> Novo Departamento
    </a>
</div>

<div class="card shadow-sm border-0">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th class="ps-4">Nome do Departamento</th>
                        <th class="text-end pe-4" style="width: 250px;">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Departamentos != null && Model.Departamentos.Any())
                    {
                        @foreach (var item in Model.Departamentos)
                        {
                            <tr>
                                <td class="ps-4 fw-bold text-secondary">@item.Nome</td>
                                <td class="text-end pe-4">
                                    <div class="d-flex justify-content-end gap-2">
                                        <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-outline-primary">
                                            <i class="bi bi-pencil-square me-1"></i> Editar
                                        </a>

                                        <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">
                                            <i class="bi bi-trash me-1"></i> Excluir
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="2" class="text-center py-5 text-muted">
                                <i class="bi bi-inbox display-4 d-block mb-3 opacity-25"></i>
                                <p>Nenhum departamento cadastrado.</p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>