@page
@model Portal_Refeicoes.Pages.Departamentos.CreateModel
@{
    ViewData["Title"] = "Novo Departamento";
}

<div class="container mt-4" style="max-width: 600px;">
    <div class="card shadow">
        <div class="card-header bg-success text-white">
            <h4 class="mb-0"><i class="bi bi-plus-circle"></i> Novo Departamento</h4>
        </div>
        <div class="card-body">
            <form method="post">
                <div class="mb-3">
                    <label asp-for="Departamento.Nome" class="form-label fw-bold">Nome do Departamento</label>
                    <input asp-for="Departamento.Nome" class="form-control" placeholder="Ex: Recursos Humanos" />
                    <span asp-validation-for="Departamento.Nome" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-end gap-2 mt-4">
                    <a asp-page="Index" class="btn btn-outline-secondary">Cancelar</a>
                    <button type="submit" class="btn btn-success px-4">Salvar</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}